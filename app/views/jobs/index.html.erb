<div id="typography" class="container mb-5">
    <div class="section-title col-lg-12 col-md-10 ml-auto mr-auto">
        <div class="example col-md-10 ml-auto mr-auto">
            <h3 style="text-align:right; margin-top:50px;"><%= @jobs.count%> jobs found </h3>
            <table class="table table-striped table-responsive-md" style="margin-top:30px;">
                <thead class="thead-dark">
                    <tr>
                        <th colspan='1' style="text-align:center;">Title</th>
                        <th colspan='2' style="text-align:center;">Link</th>
                    </tr>
                </thead>
                <tbody>
                    <% @jobs.each do |job| %>
                        <tr>
                            <td colspan='1'>
                                <h5><%= job.title %></h5>
                            </td>
                            <td colspan='1'>
                                <h5><%= link_to job.link.truncate(23), job.link, target: :_blank %></h5>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>